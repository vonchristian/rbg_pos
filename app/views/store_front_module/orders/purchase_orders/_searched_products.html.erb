<% @products.each do |product| %>
                <tr>
                  <td>
                    <b><%= product.name.try(:upcase) %></b><br>

                    <% product.unit_of_measurements.each do |unit_of_measurement| %>
                      <small class="text-success"><%= number_to_currency unit_of_measurement.price %> / <%= unit_of_measurement.unit_code %></small>
                    <% end %>

                  </td>
                  <td>

                      <b class="text-danger"><%= product.balance %> <%= product.base_measurement_unit_code.try(:upcase) %></b><br>
                      <small>AVAILABLE</small>

                  </td>
                </tr>
                    <%= simple_form_for @purchase_order_line_item, url: :store_front_module_purchase_order_line_item_processings do |f| %>
                      <div class="row">
                        <div class="col-md-1">
                        <%= f.input :quantity, as: :string, input_html: { oninput: 'calculateLineItemTotalCost()', id: 'line_item_quantity', value: 1}, autofocus: true %>
                      </div>
                      <div class="col-md-2">
                        <%= f.input :unit_of_measurement_id, label: 'Unit', input_html: { value: product.base_measurement }, collection: product.unit_of_measurements.all.map{|a| [a.unit_code, a.id] } %>
                      </div>
                      <div class="col-md-2">
                        <%= f.input :unit_cost %>
                      </div>
                      <div class="col-md-2">
                        <%= f.input :total_cost %>
                      </div>
                      <div class="col-md-3">
                        <%= f.input :barcode %>
                      </div>
                      <div class="col-md-2">
                        <br>
                        <%= f.submit "Add", class: "btn btn-success" %>
                      </div>
                    </div>

                      <%= f.input :cart_id, input_html: { value: @cart.id }, as: :hidden %>
                      <%= f.input :product_id, input_html: { value: product.id }, as: :hidden %>





              <% end %>
<% end %>
